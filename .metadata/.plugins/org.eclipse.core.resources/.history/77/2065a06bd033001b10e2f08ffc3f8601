package decisao;

import javax.swing.JOptionPane;

public class DecisaoSimples {

	public static void main(String[] args) {
		String nome = JOptionPane.showInputDialog("Nome").toUpperCase();
		float nota1 = Float.parseFloat(JOptionPane.showInputDialog("Nota1"));
		float nota2 = Float.parseFloat(JOptionPane.showInputDialog("Nota2"));
		float media = Float.parseFloat(JOptionPane.showInputDialog("Media"));
		if (media>=6) {
			System.out.println("Parabéns " + nome + ", você foi aprovado!");
		}
		
		System.out.println("Até logo...");

				
				
				
				
				
				
				
				
				
	}

}
